@model HelpComing.Models.CreateReplyViewModel
@{
}

<h2>Оставить комментарий</h2>
<form method="post" action="\Replies\ReplyToRequest" class="mt-5" enctype="multipart/form-data">
    <div class="xs-3">
        <input type="text" class="form-control @(ViewData.ModelState["ReplyMessage"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-for="ReplyMessage">
        <span class="text-danger" asp-validation-for="ReplyMessage"></span>
    </div>
    <div class="xs-3" hidden="hidden">
        <input type="text" class="form-control @(ViewData.ModelState["RequestID"]?.Errors.Count > 0 ? "is-invalid" : "")" asp-for="RequestID">
        <span class="text-danger" asp-validation-for="RequestID"></span>
    </div>
    <button type="submit" class="btn btn-info">Подтвердить</button>
</form>

