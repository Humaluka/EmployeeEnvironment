@{
    ViewData["Title"] = "Список пользователей";
}

<h1>Пользователи</h1>
<table class="table">
    <thead>
        <tr>
            <th>Идентификатор</th>
            <th>Логин</th>
            <th>Email</th>
            <th>Роль</th>
            <th>Страна</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserID</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.RoleID</td>
                <td>@item.CountryID</td>
                <td>
                    <a asp-action="Edit" asp-controller="Users" asp-route-id="@item.UserID">Редактировать</a>
                    <form asp-action="Delete" asp-controller="Users" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@item.UserID" />
                        <button type="submit" class="text-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Новый пользователь</a>
</div>